<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.kinneret.behemoth.books_activity">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/Yehoshua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="buttonClicked"
            android:text="@string/Yehoshua" />


        <Button
            android:id="@+id/Shoftim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="buttonClicked"
            android:text="@string/Shoftim" />

        <Button
            android:id="@+id/Shmuel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="buttonClicked"
            android:text="@string/Shmuel1" />
        <Button
            android:id="@+id/Shmuel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Shmuel2" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>